<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        app:title="Informazioni Account"
        app:icon="@drawable/user_icon_compact">

        <EditTextPreference
            app:key="username"
            app:title="Nome utente"
            app:summary="Enrico Piccin"/>
    </PreferenceCategory>

    <PreferenceCategory
        app:title="ProduttivitÃ "
        app:icon="@drawable/productivity_compact">

        <ListPreference
            app:key="dailyGoal"
            app:defaultValue="5"
            app:entries="@array/dailyGoal"
            app:entryValues="@array/dailyGoal"
            app:title="Obiettivo giornaliero"
            app:summary="5"/>
    </PreferenceCategory>

    <PreferenceCategory
        app:title="Notifiche"
        app:icon="@drawable/notifications_compact">

        <SwitchPreference
